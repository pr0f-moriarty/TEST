<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.org/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AddProductController</servlet-name>
  	<display-name>AddProductController</display-name>
  	<description></description>
  	<servlet-class>org.example.controller.AddProductController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DisplayProductsController</servlet-name>
  	<display-name>DisplayProductsController</display-name>
  	<description></description>
  	<servlet-class>org.example.controller.DisplayProductsController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddProductController</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DisplayProductsController</servlet-name>
  	<url-pattern>/display</url-pattern>
  </servlet-mapping>
</web-app>
